# ============================================================================
# OWNLY ENVIRONMENT CONFIGURATION
# ============================================================================
# Quick Start: Copy this file to .env.local and you're ready to run!
#   cp .env.example .env.local
#
# Demo mode is enabled by default - no API keys needed to explore the app.
# ============================================================================

# ============================================================================
# REQUIRED
# ============================================================================

# Database connection (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ownly"

# ============================================================================
# DEMO MODE (enabled by default)
# ============================================================================
# When "true": bypasses auth, shows sample data, mocks external services
# Set to "false" when you're ready to connect real services
NEXT_PUBLIC_DEMO_MODE="true"

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# NEXT_PUBLIC_API_URL="http://localhost:3001"

# ============================================================================
# OPTIONAL: Authentication (Clerk)
# ============================================================================
# Sign up at https://clerk.com to get your keys
# Only needed when NEXT_PUBLIC_DEMO_MODE="false"

# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
# CLERK_SECRET_KEY="sk_test_..."
# NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
# NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# ============================================================================
# OPTIONAL: Payments (Stripe)
# ============================================================================
# Sign up at https://stripe.com for payment processing

# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================================================
# OPTIONAL: AI Features (OpenAI)
# ============================================================================
# Get your API key at https://platform.openai.com

# OPENAI_API_KEY="sk-..."
# OPENAI_ORGANIZATION_ID="org-..."

# ============================================================================
# OPTIONAL: Document Signing (DocuSign)
# ============================================================================
# Configure at https://developers.docusign.com

# DOCUSIGN_INTEGRATION_KEY="..."
# DOCUSIGN_USER_ID="..."
# DOCUSIGN_ACCOUNT_ID="..."
# DOCUSIGN_BASE_PATH="https://demo.docusign.net/restapi"
# DOCUSIGN_OAUTH_BASE_PATH="account-d.docusign.com"

# ============================================================================
# OPTIONAL: Banking Integrations
# ============================================================================
# Connect business banking partners

# MERCURY_API_KEY="..."
# RELAY_API_KEY="..."
# BREX_API_KEY="..."

# ============================================================================
# OPTIONAL: State Filing & Legal
# ============================================================================
# For automated LLC/Corp filings

# LOB_API_KEY="..."
# IRONCLAD_API_KEY="..."
# REGISTERED_AGENT_API_KEY="..."
# STATE_FILING_WEBHOOK_SECRET="..."

# ============================================================================
# OPTIONAL: Email (Resend)
# ============================================================================
# Transactional emails - https://resend.com

# RESEND_API_KEY="..."
# EMAIL_FROM="noreply@ownly.com"

# ============================================================================
# OPTIONAL: File Storage (AWS S3)
# ============================================================================
# For document uploads and storage

# AWS_ACCESS_KEY_ID="..."
# AWS_SECRET_ACCESS_KEY="..."
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="ownly-documents"

# ============================================================================
# OPTIONAL: Caching & Queues (Redis)
# ============================================================================
# For sessions, caching, and background jobs

# REDIS_URL="redis://localhost:6379"
# QUEUE_URL="redis://localhost:6379"

# ============================================================================
# OPTIONAL: Analytics & Monitoring
# ============================================================================
# PostHog analytics - https://posthog.com
# NEXT_PUBLIC_POSTHOG_KEY="..."
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry error tracking - https://sentry.io
# NEXT_PUBLIC_SENTRY_DSN="..."
# SENTRY_AUTH_TOKEN="..."

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Toggle features on/off

NEXT_PUBLIC_ENABLE_AI_COACH="true"
# NEXT_PUBLIC_ENABLE_INSURANCE="false"
# NEXT_PUBLIC_ENABLE_COMMUNITY="false"
