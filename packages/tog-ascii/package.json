{
  "name": "@ownly/tog-ascii",
  "version": "1.0.0",
  "description": "Taste of Gratitude ASCII Cinema - A terminal-based animated series engine",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tog-ascii": "./bin/tog-ascii.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "validate": "tsx src/tools/validate.ts",
    "compliance": "tsx src/tools/compliance.ts",
    "preview": "tsx src/tools/preview.ts",
    "build:series": "tsx src/tools/build-series.ts",
    "release": "tsx src/tools/release.ts",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ascii",
    "animation",
    "terminal",
    "cinema",
    "cli"
  ],
  "author": "Taste of Gratitude",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "boxen": "^7.1.1",
    "conf": "^12.0.0",
    "enquirer": "^2.4.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "content"
  ]
}
